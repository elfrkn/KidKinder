@model List<KidKinder.Entities.Service>
@{
    ViewBag.Title = "ServiceList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Include Bootstrap CSS -->

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <!-- Include Font Awesome CSS -->

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
</head>
<body>
    <div class="card">
        <div class="card-header">
            <br />
            <h2>Hizmetler Listesi</h2>

            <div class="card-header-right">

            </div>
        </div>
        <div class="card-block table-border-style">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr bgcolor="#F2F3F4">
                            <th scope="col">#</th>
                            <th scope="col">Başlık</th>
                            <th>İçerik</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td scope="col">@item.ServiceId</td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td><a href="/Service/DeleteService/@item.ServiceId" class="btn btn-labeled btn-danger"><i class="fa fa-trash"></i>Sil</a></td>
                                <td><a href="/Service/EditService/@item.ServiceId" class="btn btn-primary"><i class="fas fa-edit"></i>Güncelle</a></td>

                            </tr>
                        }

                    </tbody>

                </table>

            </div>

        </div>
    </div>
    <a href="/Service/AddService/" class="btn btn-success"><i class="fas fa-save"></i>Yeni Hizmet Girişi </a>
</body>



</html>

