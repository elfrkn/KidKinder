@model List<KidKinder.Entities.ClassRoom>
@{
    ViewBag.Title = "ClassList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Include Bootstrap CSS -->

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <!-- Include Font Awesome CSS -->

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
</head>
<body>

    <!-- Basic table card start -->
    <div class="card">
        <div class="card-header">
            <br />
            <h2>Sınıf Listesi</h2>

            <div class="card-header-right">

            </div>
        </div>
        <div class="card-block table-border-style">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr bgcolor="#F2F3F4">
                            <th scope="col">#</th>
                            <th>Sınıf Adı</th>
                            <th>Yaş Aralığı</th>
                            <th>Kontenjan</th>
                            <th>Fiyat</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <th scope="row">@item.ClassRoomId</th>
                                <td>@item.Title</td>
                                <td>@item.AgeofKids</td>
                                <td>@item.TotalSeats</td>
                                <td>@item.Price</td>
                                <td><a href="/Class/DeleteClass/@item.ClassRoomId" class="btn btn-labeled btn-danger"><i class="fa fa-trash"></i>Sil</a></td>
                            
                                <td><a href="/Class/EditClass/@item.ClassRoomId" class="btn btn-primary"><i class="fas fa-edit"></i>Güncelle</a></td>
                            </tr>

                        }
                    </tbody>

                </table>

            </div>

        </div>

    </div>

    <span>  <a href="/Class/AddClass/" class="btn btn-success"><i class="fas fa-save"></i>Yeni Sınıf Girişi </a> </span>
</body>

</html>



