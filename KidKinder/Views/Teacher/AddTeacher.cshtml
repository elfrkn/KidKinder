@model KidKinder.Entities.Teacher
@{
    ViewBag.Title = "AddTeacher";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<body>
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">
                <div class="page-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card">

                                <div class="card-block">
                                    <br />
                                    <h3>Yeni Öğretmen Bilgilerini Giriniz</h3>
                                    <form method="post">

                                        <br />
                                        <label><strong>Adı Soyadı</strong></label>
                                        @Html.TextBoxFor(x => x.NameSurname, new { @class = "table table-bordered" })
                                        <br />

                                        <label>Branş</label>
                                        @Html.TextBoxFor(x => x.Title, new { @class = "table table-bordered" })
                                        <br />

                                        <label>Resim Url</label>
                                        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "table table-bordered" })
                                        <br />

                                        <br />
                                        <button class="btn btn-primary"> Kaydet</button>

                                    </form>

                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

