@model List<KidKinder.Entities.Teacher>
@{
    ViewBag.Title = "TeacherList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<br />
<h2>Öğretmen Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Öğretmen Adı</th>
        <th>Branş</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.TeacherId</td>
            <td>@item.NameSurname</td>
            <td>@item.Title</td>
            <td><a href="#" class="btn btn-danger">Sil</a></td>
            <td><a href="#" class="btn btn-primary">Güncelle</a></td>
        </tr>
    }

</table>
<td><a href="#" class="btn btn-info">Yeni Öğretmen Girişi</a></td>