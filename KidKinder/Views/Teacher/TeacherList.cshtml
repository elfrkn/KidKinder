@model List<KidKinder.Entities.Teacher>
@{
    ViewBag.Title = "TeacherList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Include Bootstrap CSS -->

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <!-- Include Font Awesome CSS -->

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
</head>
<body>
    <div class="card">
        <div class="card-header">
            <br />
            <h2>Öğretmen Listesi</h2>

            <div class="card-header-right">

            </div>
        </div>
        <div class="card-block table-border-style">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr bgcolor="#F2F3F4">
                            <th scope="col">#</th>
                            <th scope="col">Öğretmen Adı</th>
                            <th>Branş</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td scope="col">@item.TeacherId</td>
                                <td>@item.NameSurname</td>
                                <td>@item.Title</td>
                                <td><a href="/Teacher/DeleteTeacher/@item.TeacherId" class="btn btn-labeled btn-danger"><i class="fa fa-trash"></i>Sil</a></td>
                                <td><a href="/Teacher/EditTeacher/@item.TeacherId" class="btn btn-primary"><i class="fas fa-edit"></i>Güncelle</a></td>

                            </tr>
                        }

                    </tbody>

                </table>
                
            </div>

        </div>

    </div>
    <span>  <a href="/Teacher/AddTeacher/" class="btn btn-success"><i class="fas fa-save"></i>Yeni Öğretmen Girişi </a> </span>
</body>

</html>
